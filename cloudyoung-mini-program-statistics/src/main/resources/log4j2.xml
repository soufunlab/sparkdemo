	<!--设置com.bonree.sdk.behavior包的输出级别为INFO -->
	<category name="com.bonree"> 
		 <priority value="INFO"/>
	     <appender-ref ref="LOG.INFO" />
	</category> 
	<root>
		<priority value="WARN"  />
		 <appender-ref ref="LOG.Console" /> 
		<appender-ref ref="LOG.WARN" />
		<appender-ref ref="LOG.ERROR" />
	</root>
